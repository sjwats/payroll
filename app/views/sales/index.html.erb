<!-- sales view -->
<h1>Sales List</h1> </br>
<% @sales_results.each do |employee| %>
   <%if employee['last_name'] == 'Bobby' %>
      <ul>
      <li><bold><font color="red"><%=employee['first_name']%> <%=employee['last_name']%></font></bold></li>
      <p>Sale Value: <%=employee['gross_sale_value']%>
      </p>
      </ul>
      </br>
  <%else%>
      <ul>
      <li><%=employee['first_name']%> <%=employee['last_name']%></li>
      <p>Sale Value: <%=employee['gross_sale_value']%>
      </p>
      </ul>
      </br>
  <%end%>
<%end%>

